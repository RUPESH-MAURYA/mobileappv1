<LoginScreen>:
    GridLayout:
        
        cols:1
        GridLayout:
            padding:15,15
            spacing: 20,20
            cols:1
            Label:
                text:"User Login to Rupesh App"
                font_size:'20sp' 
            TextInput:
                id:username
                hint_text:"Enter username"
            TextInput:
                password: True
                id:password
                hint_text:"Enter Password"
            RelativeLayout:
                Button:
                    text:"Login"
                    on_press:root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3,0.6
                    pos_hint:{'center_x':0.5,'center_y':0.6}

            Label:
                id:wrong_login
                text:""
        GridLayout:
            cols:2 
            size_hint:0.2,0.2
            padding: 10,10
            spacing: 10,0
            Button:
                text:"Forgot Password"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
            
            Button:
                text:"Sign Up"
                background_color:1,1,1,0
                opacity:1 if self.state=='normal' else 0.5
                on_press:root.sign_up()
                


<SignupScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            size_hint:0.2,0.2
            padding: 10,10
            spacing: 10,0
            RelativeLayout:
                Button:
                    text:"Back"
                    on_press:root.back()
                    size_hint: 0.3,0.6
                    background_color:1,1,1,0
                    opacity:1 if self.state=='normal' else 0.5
                
        GridLayout:
            padding: 10,10
            spacing: 20,20
            cols:1
            Label:
                text:"Welcome to our App"
                font_size:'20sp'
            TextInput:
                id:username
                hint_text:"New username"
            TextInput:
                id:password
                hint_text:"New password"
            RelativeLayout:
                Button:
                    text:"Sign Up"
                    size_hint: 0.3,0.6
                    pos_hint:{'center_x':0.5,'center_y':0.6}
                    on_press:root.add_user(root.ids.username.text,root.ids.password.text)

<SignUpSucess>:
    GridLayout:
        cols:1
        Label:
            text:"SignedUp Successfully"
        RelativeLayout:
            Button:
                text:"Login"
                on_press:root.loginpage()
                size_hint: 0.5,0.5
                pos_hint:{'center_x':0.5,'center_y':0.6}
        

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        GridLayout:
            cols:2
            size_hint:0.20,0.20
            padding:10,10
            spacing:10,0
            
            RelativeLayout:
            
                ImageButton:
                    source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                    on_press:root.log_out()
                    size_hint: 0.6,0.6
                    pos_hint:{'center_x':0.90,'center_y':0.6}
        GridLayout:
            padding:30,30
            spacing:10,10
            cols:1
            Label:
                text:"How are you feeling"
                size_hint:0.20,0.20

            TextInput:
                id: feeling
                hint_text:"How you Feel"
                size_hint:0.30,0.30

            Button:
                text:"Enlight Yourself"
                on_press:root.get_quotes(root.ids.feeling.text)
                size_hint:0.20,0.20
                
            ScrollView:
                Label:
                    id:quotes
                    text:""
                    text_size:self.width,None
                    size_hint_y: None
                    height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"

    SignUpScreen:
        name:"sign_up_screen"
    
    SignUpSucess:
        name:"sign_up_sucess"

    LoginScreenSuccess:
        name:"login_screen_success"